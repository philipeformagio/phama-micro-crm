@model IEnumerable<PhamaMicroCrm.Web.ViewModels.CompanyViewModel>

@{
    ViewData["Title"] = "Lista de Empresas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Nova Empresa</a>
    <a class="btn btn-info" asp-controller="CompanyUnits" asp-action="Create">Nova Unidade</a>
    <a class="btn btn-info" asp-controller="Contacts" asp-action="Create">Novo Contato</a>
</p>

<br />
<hr />

@Html.AntiForgeryToken()

<table id="DT_load" class="table table-striped table-bordered" style="width: 100%;">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Campo de atuação</th>
            <th></th>
        </tr>
    </thead>
</table>


@section Scripts{
    <script src="~/js/CompanyIndex.js"></script>
}